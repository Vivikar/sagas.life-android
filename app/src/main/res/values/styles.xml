<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>


    </style>

    <!-- Кастомная AppTheme.Launcher. Устанавливает в качестве фона вашу drawable -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <!-- для Android 5+ вы можете поменять цвет colorPrimaryDark, чтобы соответствовать цвету windowBackground -->
        <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>

    <style name="TextStyle">
        <item name="android:textSize">36sp</item>
        <item name="android:letterSpacing">0.11</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/booger</item>
    </style>
    <style name="TextStyle2">
        <item name="android:textSize">36sp</item>
        <item name="android:letterSpacing">0.23</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/white_85</item>
    </style>
</resources>
