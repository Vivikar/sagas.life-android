<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimelapsePageActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/timelapse_pic"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"

            app:srcCompat="@drawable/timelapse_3" />

        <TextView
            android:id="@+id/tname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:textColor="@color/white"
            tools:text="Somewhere in Alp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="72dp"
            />

        <TextView
            android:id="@+id/tdescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#59000000"
            android:shadowRadius="8"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="6sp"
            tools:text="#apls #lake #landscape"
            android:layout_marginStart="72dp"
            android:layout_marginTop="70dp"
            />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#59000000"
            android:shadowRadius="8"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="8sp"
            tools:text="\ufeff@John_Doe"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="88dp"            android:layout_marginStart="20dp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_pic"
            android:layout_width="56dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="16dp"
            android:layout_height="56dp"
            android:src="@drawable/user_icon"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/pea"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_pic_1"
            android:layout_width="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24dp"            android:layout_marginStart="74dp"
            android:layout_height="56dp"
            android:src="@drawable/user_icon"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/white"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_pic_2"
            android:layout_width="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24dp"            android:layout_marginStart="116dp"
            android:layout_height="56dp"
            android:src="@drawable/user_icon"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/white"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_pic_3"
            android:layout_width="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24dp"            android:layout_marginStart="158dp"
            android:layout_height="56dp"
            android:src="@drawable/user_icon"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/white"/>


        <ImageButton
            android:id="@+id/timelapse_page_menu_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            app:srcCompat="@drawable/icons_ic_more_vert" />

        <ImageButton
            android:id="@+id/open_comments_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/comm_num"

            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="0dp"
            android:background="@null"
            app:srcCompat="@drawable/icons_ic_btn_slidefeed_comments" />

        <TextView
            android:id="@+id/like_num"
            style="@style/TextStyle17"
            android:layout_width="32dp"
            android:layout_height="16dp"
            android:layout_above="@+id/shar_btn_page"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="4dp"
            android:text="0"
            android:textAlignment="center"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/shar_btn_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/share_num"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="0dp"
            android:background="@null"
            app:srcCompat="@drawable/icons_ic_btn_slidefeed_share" />

        <ImageButton
            android:id="@+id/TL_likes_page"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_above="@+id/like_num"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="0dp"
            android:background="@null"
            app:srcCompat="@drawable/icons_ic_btn_slidefeed_favorites" />

        <TextView
            android:id="@+id/comm_num"
            style="@style/TextStyle17"
            android:layout_width="32dp"
            android:layout_height="16dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="208dp"
            android:text="0"
            android:textAlignment="center"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/share_num"
            style="@style/TextStyle17"
            android:layout_width="32dp"
            android:layout_height="16dp"
            android:layout_above="@+id/open_comments_btn"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="4dp"
            android:text="0"
            android:textAlignment="center"
            android:textSize="12sp" />

        <ImageButton
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/abc_vector_test"
            android:background="@null"

            android:id="@+id/go_back"
            />



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_add_circle_outline_black_40dp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>