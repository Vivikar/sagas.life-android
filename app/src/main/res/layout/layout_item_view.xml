<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="360dp"
    android:orientation="horizontal"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:id="@+id/timelapse_pic"
            android:src="@drawable/timelapse_2">

        </ImageView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_pic"
            android:layout_width="56dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp"
            android:layout_height="56dp"
            android:src="@drawable/user_icon"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/pea"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tname"
                style="@style/TextStyle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="72dp"
                android:layout_marginTop="12dp"
                android:shadowColor="#59000000"
                android:shadowRadius="8"
                tools:text="Somewhere in Alp" />

            <TextView
                android:id="@+id/tdescription"
                style="@style/TextStyle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="76dp"
                android:shadowColor="#59000000"
                android:shadowRadius="8"
                tools:text="#apls #lake #landscape" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_marginTop="16dp"
                android:layout_marginLeft="376dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icons_ic_more_vert"
                android:background="@null"
                />
            <ImageButton
                android:layout_marginTop="312dp"
                android:layout_marginLeft="266dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icons_ic_btn_slidefeed_favorites"
                android:background="@null"
                />
            <ImageButton
                android:layout_marginTop="312dp"
                android:layout_marginLeft="313dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icons_ic_btn_slidefeed_share"
                android:background="@null"
                />
            <ImageButton
                android:layout_marginTop="312dp"
                android:layout_marginLeft="352dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icons_ic_btn_slidefeed_comments"
                android:background="@null"
                />
        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>