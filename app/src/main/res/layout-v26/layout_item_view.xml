<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="360dp"
    android:orientation="horizontal"
    android:layout_marginBottom="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:id="@+id/timelapse_pic"
            android:src="@drawable/timelapse_2">

        </ImageView>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/user_pic"
            android:layout_width="56dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp"
            android:layout_height="56dp"
            android:src="@drawable/user_icon"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/pea"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tname"
                style="@style/TextStyle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="72dp"
                android:layout_marginTop="12dp"
                android:shadowColor="#59000000"
                android:shadowRadius="8"
                tools:text="Somewhere in Alp" />

            <TextView
                android:id="@+id/tdescription"
                style="@style/TextStyle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="76dp"
                android:shadowColor="#59000000"
                android:shadowRadius="8"
                tools:text="#apls #lake #landscape" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="376dp"
                android:layout_marginTop="16dp"
                android:background="@null"
                app:srcCompat="@drawable/icons_ic_more_vert" />

            <ImageButton
                android:id="@+id/TL_likes"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_above="@+id/like_num"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="2dp"
                android:layout_toStartOf="@+id/shar_btn_page"
                android:background="@null"
                app:srcCompat="@drawable/icons_ic_btn_slidefeed_favorites" />

            <ImageButton
                android:id="@+id/shar_btn_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/share_num"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="2dp"
                android:layout_toStartOf="@+id/comm_btn"
                android:background="@null"
                app:srcCompat="@drawable/icons_ic_btn_slidefeed_share" />

            <ImageButton
                android:id="@+id/comm_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/comm_num"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="2dp"
                android:background="@null"
                app:srcCompat="@drawable/icons_ic_btn_slidefeed_comments" />

            <TextView
                android:id="@+id/comm_num"
                style="@style/TextStyle17"
                android:layout_width="32dp"
                android:layout_height="16dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="4dp"
                android:text="0"
                android:textAlignment="center"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/share_num"
                style="@style/TextStyle17"
                android:layout_width="32dp"
                android:layout_height="16dp"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                android:layout_toStartOf="@+id/comm_num"
                android:text="0"
                android:textAlignment="center"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/like_num"
                style="@style/TextStyle17"
                android:layout_width="32dp"
                android:layout_height="16dp"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                android:layout_toStartOf="@+id/share_num"
                android:text="0"
                android:textAlignment="center"
                android:textSize="12sp" />

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>
